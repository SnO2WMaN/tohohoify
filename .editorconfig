root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.yml]
indent_style = space

[.*-version]
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false

[*.diff]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[LICENSE]
insert_final_newline = false
